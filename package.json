{
  "name": "neon",
  "version": "0.0.4",
  "private": true,
  "engines": {
    "node": ">= 16.0.0",
    "pnpm": ">= 7.12.0"
  },
  "repository": "git@github.com:the-neon/neon.git",
  "author": "stojce <stojce@me.com>",
  "license": "MIT",
  "bin": "./bin/neon.js",
  "scripts": {
    "test": "jest --coverage",
    "clean": "rm -rf dist",
    "build:core": "tsc -p ./packages/core",
    "build:pg": "tsc -p ./packages/pg",
    "build:gql": "tsc -p ./packages/gql",
    "build": "tsc --build tsconfig.json",
    "pretty": "prettier --write './packages/**/*.{yml,yaml,json,ts,tsx,js,jsx,scss,css,md,html}'"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.31",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^26.5.6",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "packages/**/*.{yml,yaml,json,ts,tsx,js,jsx,scss,css,md,html}": [
      "prettier --write"
    ],
    "packages/**/*.ts": [
      "eslint --format=codeframe --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}