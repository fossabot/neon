{
  "name": "neon",
  "version": "0.0.3",
  "engines": {
    "node": ">= 12.16.0",
    "yarn": ">=1.22.0"
  },
  "directories": {
    "lib": "./dist"
  },
  "private": true,
  "repository": "git@github.com:the-neon/neon.git",
  "author": "stojce <stojce@me.com>",
  "license": "MIT",
  "bin": {
    "neon": "./bin/neon.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:cli": "tsc -p ./packages/cli",
    "build:core": "tsc -p ./packages/core",
    "build:pg": "tsc -p ./packages/pg",
    "build:gql": "tsc -p ./packages/gql",
    "build": "tsc --build tsconfig.json",
    "postinstall": "yarn build",
    "pretty": "yarn prettier --write './packages/**/*.{yml,yaml,json,ts,tsx,js,jsx,scss,css,md,html}'"
  },
  "dependencies": {
    "typescript": "^4.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1"
  },
  "lint-staged": {
    "packages/**/*.{yml,yaml,json,ts,tsx,js,jsx,scss,css,md,html}": [
      "prettier --write"
    ],
    "packages/**/*.ts": [
      "eslint --format=codeframe --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
